{
  "name": "sapphirewallet",
  "author": "Nolli Manuele",
  "license": "MIT",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint .",
    "test": "jest",
    "test:ci": "jest --coverage --collectCoverageFrom='src/**/*.{ts,tsx}'  -reporters=jest-junit --all",
    "coverage": "jest --coverage --collectCoverageFrom='src/**/*.{ts,tsx}' --coverageReporters=html"
  },
  "eslintConfig": {
    "extends": "universe/native"
  },
  "jest": {
    "testTimeout": 60000,
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|@ui-kitten)"
    ],
    "setupFiles": [
      "./jest.setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/assets/*",
      "./src/context/*",
      "./src/contract/*"
    ]
  },
  "dependencies": {
    "@babel/plugin-transform-private-methods": "^7.23.3",
    "@eva-design/eva": "^2.2.0",
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-native-masked-view/masked-view": "0.2.9",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@shopify/flash-list": "1.4.3",
    "@ui-kitten/components": "^5.3.1",
    "@ui-kitten/eva-icons": "^5.3.1",
    "ethers": "^6.8.1",
    "expo": "~49.0.15",
    "expo-blur": "~12.4.1",
    "expo-clipboard": "~4.3.1",
    "expo-crypto-polyfills": "^1.1.0",
    "expo-image": "~1.3.5",
    "expo-secure-store": "~12.3.1",
    "expo-status-bar": "~1.6.0",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-collapsible": "^1.6.1",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "13.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-transform-flow-strip-types": "^7.23.3",
    "@testing-library/react-native": "^12.4.0",
    "@types/jest": "^29.5.8",
    "@types/react": "~18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-universe": "^12.0.0",
    "jest": "^29.7.0",
    "jest-expo": "^49.0.0",
    "prettier": "^3.0.3",
    "react-native-dotenv": "^3.4.9",
    "typescript": "^5.1.3"
  },
  "private": true
}
